#!/bin/bash

if [[ ! $(command -v php) ]]; then
  echo "PHP binary could not be found"
  exit 1
fi

version=$(php -v | grep "^PHP")

echo "Linting against PHP version"
echo $version

failed=0

for directory in 'modules' 'themes' 'profiles'
do
  for file in `find web/$directory/custom`
  do
      EXTENSION="${file##*.}"

      if [ "$EXTENSION" == "php" ] || [ "$EXTENSION" == "theme" ] || [ "$EXTENSION" == "module" ] || [ "$EXTENSION" == "profile" ]
      then
          RESULTS=`php -l $file`

          if [ "$RESULTS" != "No syntax errors detected in $file" ]
          then
              echo $RESULTS
              failed=1
          fi
      fi
  done
done

if [[ $failed != 0 ]]; then
  exit 1;
fi
